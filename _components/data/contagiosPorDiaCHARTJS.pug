
style.
	canvas#barChartContagiosPorDia {
		display: block !important;
		margin: 0 auto;
		background: white;
	}
	
canvas#barChartContagiosPorDia

script.
	var ctx = document.getElementById("barChartContagiosPorDia");
	var barChartContagiosPorDia = new Chart(ctx, {
		type: 'bar',
		responsive: true,
		data: {
			labels: [ "test 3" , "test 4" ],
			datasets: [{
				backgroundColor: 'transparent',
				//- label: "test 1",
				label: "",
				data: []
			}]
		}
	});
	
	setTimeout(function() {
		console.log( "Agregando ..." );
		
		var contagiosPorDia = [];
		$.each( $( $( "#TotalesNacionales tr" )[7] ).find( "td" ) , function(){
			let valor = $( this ).text();
			contagiosPorDia.push( valor );
		});
		
		var dataDATOS = [];
		$.each( $( $( "#TotalesNacionales table tbody tr" )[0] ).find( "th" ) , function(){
			var fecha = $( this ).html();
			dataDATOS.push( fecha );
		});
	
		barChartContagiosPorDia.data.labels = dataDATOS;
		barChartContagiosPorDia.data.datasets[0].data = contagiosPorDia;
		barChartContagiosPorDia.data.datasets[0].backgroundColor = "#ff5a00";
		barChartContagiosPorDia.update();
	}, 3000);	