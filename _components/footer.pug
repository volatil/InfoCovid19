footer

	div#subir
		img( class='lazyload' alt='Subir' data-src='data:image/svg+xml;base64,' )
		script.
			$(document).ready(function(){

				$('#subir').click(function(){
					$('body, html').animate({
						scrollTop: '0px'
					}, 300);
				});

				$(window).scroll(function(){
					if( $(this).scrollTop() > 400 ){
						$('#subir').fadeIn();
					} else {
						$('#subir').fadeOut();
					}
				});

			});


