doctype html
html
	head

		title COVID 19 | Contacto

		include ../_components/meta

	body

		include ../_components/header

		include ../_components/ilustracionHeader

		style.
			div.contacto {
				width: 400px;
				margin: 100px auto;
				min-height: 200px;
				border: 1px solid #ddd;
				border-radius: 5px;
				background: #f9f9f9;
				position: relative;
				padding: 10px 20px;
			}
			div.contacto > .top {
				background: #e8fbfe;
				width: 80px;
				height: 80px;
				border-radius: 50%;
				position: absolute;
				right: 0;
				left: 0;
				margin: 0 auto;
				top: -50px;
			}
			div.contacto > .top > img {
				width: 90px;
				margin: 0 auto;
				display: block;
			}
			div.contacto > p {
				text-align: center;
				margin-top: 40px;
				font-size: 2em;
			}
			div.contacto > a {
				display: inline-block;
				width: 112px;
				margin-right: 30px;
				margin-bottom: 20px;
				text-decoration: none;
			}
			div.contacto > a:last-of-type {
				margin-right: 0px;
			}
			div.contacto > a > div {
				width: 70px;
				height: 70px;
				background: #dedede;
				border-radius: 50%;
				margin: 0 auto;
			}
			div.contacto > a > div > img {
				width: 70%;
				margin: 0 auto;
				display: block;
				padding-top: 8px;
				-webkit-transition: all .2s ease;
				-moz-transition:    all .2s ease;
				-o-transition:      all .2s ease;
				transition:         all .2s ease;
			}
			div.contacto > a:hover > div > img {
				transform: rotate( 25deg );
				-webkit-transition: all .2s ease;
				-moz-transition:    all .2s ease;
				-o-transition:      all .2s ease;
				transition:         all .2s ease;
			}
			div.contacto > a > span {
				border: 1px solid #dedede;
				display: block;
				color: black;
				text-align: center;
				border-radius: 5px;
				padding: 4px 10px;
				margin-top: 20px;
			}
			@media( max-width: 500px ) {
				div.contacto {
					width: 70%;
				}
			}

		div.contacto
			div.top
				img( src='./imagenes/contacto/contactoTop.png' , alt='Contacto' )
			p Contacto

			a( href='https://twitter.com/paulombriz' , title='Instagram' )
				div
					img( src='data:image/svg+xml;base64,' , alt='Instagram' )
				span Instagram

			a( href='https://twitter.com/paulombriz' , title='Twitter' )
				div
					img( src='data:image/svg+xml;base64,' , alt='Twitter' )
				span Twitter

			a( href='https://github.com/volatil' , title='Github' )
				div
					img( src='data:image/svg+xml;base64,' , alt='Github' )
				span Github

		include ../_components/footer
